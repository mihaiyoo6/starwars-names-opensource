{
  "name": "starwars-names-opensource",
  "description": "Get random starwars names",
  "version": "0.0.0-semantically-released",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf -rf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:watch": "npm t -- -w",
    "test": "mocha src/index.test.js --compilers js:babel-register",
    "cover": "nyc npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mihaiyoo6/starwars-names-opensource.git"
  },
  "keywords": [
    "random",
    "starwars"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Mihai Mijea <mijeamihai@yahoo.com> (http://mijeamihai.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mihaiyoo6/starwars-names-opensource/issues"
  },
  "homepage": "https://github.com/mihaiyoo6/starwars-names-opensource#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.7.5",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "6.7.2",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.1",
    "cz-conventional-changelog": "1.1.6",
    "mocha": "2.4.5",
    "nyc": "6.4.0",
    "rimraf": "2.5.2",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
